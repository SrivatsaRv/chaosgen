kind: ChaosEngine
metadata:
  name: "experiment-name"
  namespace: "demo"
spec:
  appinfo:
    appns: "demo"
    applabel: "app=service-name"
    appkind: "deployment"
  chaosServiceAccount: litmus-admin
  experiments:
  - name: "experiment-type"
    spec:
      components:
        env:
        - name: TOTAL_CHAOS_DURATION
          value: "60"
        - name: CHAOS_INTERVAL
          value: "10"
        - name: FORCE
          value: "false"
